# See http://editorconfig.org
root = true

[*]
charset = utf8
end_of_line = lf
insert_final_newline = true
indent_style = space

[*.{r,R}]
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.Rmd]
indent_size = 4
trim_trailing_whitespace = true

[{NEWS,DESCRIPTION,LICENSE}]
max_line_length = 80
